    "@types/three": "^0.180.0",
    "actions-up": "^1.4.2",
    "better-node-test": "^0.8.3",
    "eslint": "^9.38.0",
    "happy-dom": "^20.0.8",
    "multiocular": "^0.8.1",
    "nano-staged": "^0.8.0",
    "simple-git-hooks": "^2.13.1",
    "size-limit": "^11.2.0",
    "stylelint": "^16.25.0",
    "svgo": "^4.0.0",
    "typescript": "^5.9.3"
