    "@types/culori": "^4.0.0",
    "@types/delaunator": "^5.0.3",
    "@types/node": "^22.15.18",
    "@types/three": "^0.176.0",
    "better-node-test": "^0.7.1",
    "eslint": "^9.27.0",
    "happy-dom": "^17.4.7",
    "nano-staged": "^0.8.0",
    "simple-git-hooks": "^2.13.0",
    "size-limit": "^11.2.0",
    "stylelint": "^16.19.1",
    "svgo": "^3.3.2",
    "typescript": "^5.8.3"
  },
  "pnpm": {
    "overrides": {
      "markdown-it@<12.3.2": ">=12.3.2",
      "protobufjs@<6.11.3": ">=6.11.3",
      "got@<11.8.5": ">=11.8.5"
    },
    "onlyBuiltDependencies": [
      "esbuild",
      "simple-git-hooks"
