{
  "name": "oklch-picker",
  "private": true,
  "homepage": "https://oklch.com/",
  "type": "module",
  "license": "MIT",
  "engines": {
    "node": ">=16"
  },
  "scripts": {
    "start": "vite",
    "build": "vite build -m production",
    "build:lch": "LCH=1 vite build -m production && ./lch.sh",
    "lint": "tsc --noEmit && eslint . && stylelint **/*.css",
