{
  "compilerOptions": {
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowJs": true,
    "lib": ["ESNext", "DOM"],
    "target": "es2018",
    "module": "esnext",
    "strict": true,
    "noEmit": true
  },
  "include": [
    "**/*.ts"
  ],

  "ts-node": {
    "esm": true,
    "compilerOptions": {
      "lib": ["DOM", "ESNext"],
      "allowJs": true,
    }
  }
}
