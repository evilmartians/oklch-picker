include ../range/mixin.pug

mixin card(type)
  section.card( class=`is-${type}` )

    if type === 'l'
      h2.card_title Lightness
      .card_number
        +field('L', 'l', {
          type: 'number',
          min: 0,
          max: 100,
          step: L_STEP
        })
      .card_chart
        .card_size
          +chart('h', 'c', 'l')
      .card_range
        +range('l', 100, L_STEP, 70)

    else if type === 'c'
      h2.card_title Chroma
      .card_number
        +field('C', 'c', {
          type: 'number',
          min: 0,
          step: C_STEP
        })
      .card_chart
        .card_size
          +chart('l', 'c', 'h')
      .card_range
        +range('c', C_MAX, C_STEP, LCH ? 39 : 0.1)

    else if type === 'h'
      h2.card_title Hue
      .card_number
        +field('H', 'h', {
          type: 'number',
          min: 0,
          max: H_MAX,
          step: H_STEP
        })
      .card_chart
        .card_size
          +chart('c', 'l', 'h')
      .card_range
        +range('h', H_MAX, H_STEP, 286)

    else if type === 'a'
      h2.card_title Alpha
      .card_number
        +field('Alpha', 'a', {
          type: 'number',
          min: 0,
          value: ALPHA_MAX,
          max: ALPHA_MAX,
          step: ALPHA_STEP,
        })
      .card_range
        +range('a', ALPHA_MAX, ALPHA_STEP, 100)

    else if type === '3d'
      h2.card_title 3D
      include ../minimodel/index.pug
